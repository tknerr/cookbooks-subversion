[groups]
<% @repositories.each do |repository| %>
<% if repository['rw'] %>
<%= repository['name'] %>_commiters = <%= repository['rw'].join(',') %>
<% end %>
<% if repository['r'] -%>
<%= repository['name'] %>_trackers = <%= repository['r'].join(',') %>
<% end %>
<% end %>

<% @repositories.each do |repository| %>
[<%= repository['name'] %>:/]
<% if repository['rw'] %>
@<%= repository['name'] %>_commiters = rw
<% end %>
<% if repository['r'] %>
@<%= repository['name'] %>_trackers = r
<% end %>
<% end %>